<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Standard Flutter Launch Theme (Built-in to Android) -->
    <style name="LaunchTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>
    
    <!-- Standard Flutter App Theme -->
    <style name="NormalTheme" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

    <!-- Unity Theme (Built-in to Android) -->
    <style name="UnityThemeSelector" parent="@android:style/Theme.DeviceDefault.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>